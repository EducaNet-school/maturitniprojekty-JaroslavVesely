<body style="padding: 100px">
        <input onclick="selectFirst(1)" id="square" type="button" value="Čtverec" style="display: block; margin-bottom: 5px; border: 1px solid grey;">
        <input onclick="selectFirst(2)" id="rectangle" type="button" value="Obdélník" style="display: block; margin-bottom: 5px; border: 1px solid grey;">
        <input onclick="selectFirst(3)" id="triangle" type="button" value="Trojúhleník" style="display: block; margin-bottom: 5px; border: 1px solid grey;">
        <input onclick="selectSecond(1)" id="allSame" type="button" value="Rovnostraný" style="display: none; margin-bottom: 5px; margin-left:20px; border: 1px solid grey;">
        <input onclick="selectSecond(2)" id="twoSame" type="button" value="Rovnoramenný" style="display: none; margin-bottom: 5px; margin-left:20px; border: 1px solid grey;">
        <br>
        <div id="divA" style="display: none; "><label for="input1">Strana <strong>a</strong> </label> <input id="input1" type="number"><br></div>                
        <div id="divB" style="display: none"><label for="input2">Strana <strong>b</strong> </label> <input id="input2" type="number"><br></div>        
        <br>
        <div id="divO" style="display: none"><input type="button" onclick="count(1)" value="Odeslat data na obvod" style="border: 1px solid grey;"></div>
        <div id="divS" style="display: none"><input type="button" onclick="count(2)" value="Odeslat data na obsah" style="border: 1px solid grey;"></div>
        <br>
        <a id="result"></a>
    <script>
        var selectFirstVar = 0;
        var selectSecondVar = 0;
        
        function selectFirst(option){
            switch(option){
                case 1:
                    selectFirstVar = 1;
                    document.getElementById("square").style.backgroundColor = "violet";
                    document.getElementById("divA").style.display = "block";
                    document.getElementById("divO").style.display = "unset";
                    document.getElementById("divS").style.display = "unset";
                    
                    document.getElementById("rectangle").style.backgroundColor = "buttonface";
                    document.getElementById("triangle").style.backgroundColor = "buttonface";
                    document.getElementById("divB").style.display = "none";
                    document.getElementById("allSame").style.display = "none";
                    document.getElementById("twoSame").style.display = "none";
                    document.getElementById("allSame").style.backgroundColor = "buttonface";
                    document.getElementById("twoSame").style.backgroundColor = "buttonface";
                    hideResults();
                    break;
                case 2:
                    selectFirstVar = 2;
                    document.getElementById("rectangle").style.backgroundColor = "violet";
                    document.getElementById("divA").style.display = "block";
                    document.getElementById("divB").style.display = "block";
                    document.getElementById("divO").style.display = "unset";
                    document.getElementById("divS").style.display = "unset";
                    
                    document.getElementById("square").style.backgroundColor = "buttonface";
                    document.getElementById("triangle").style.backgroundColor = "buttonface";
                    document.getElementById("allSame").style.display = "none";
                    document.getElementById("twoSame").style.display = "none";
                    document.getElementById("allSame").style.backgroundColor = "buttonface";
                    document.getElementById("twoSame").style.backgroundColor = "buttonface";
                    hideResults();
                    break;
                case 3:
                    selectFirstVar = 3;
                    document.getElementById("allSame").style.display = "block";
                    document.getElementById("twoSame").style.display = "block";
                    document.getElementById("triangle").style.backgroundColor = "violet";
                    
                    document.getElementById("rectangle").style.backgroundColor = "buttonface";
                    document.getElementById("square").style.backgroundColor = "buttonface";
                    document.getElementById("divA").style.display = "none";
                    document.getElementById("divB").style.display = "none";
                    document.getElementById("divO").style.display = "none";
                    document.getElementById("divS").style.display = "none";
                    hideResults();
                    break;
            }
        }
        
        function selectSecond(option){
            switch(option){
                case 1:
                    selectSecondVar = 1;
                    document.getElementById("allSame").style.backgroundColor = "violet";
                    document.getElementById("divA").style.display = "block";
                    document.getElementById("divO").style.display = "unset";
                    document.getElementById("divS").style.display = "unset";
                    
                    document.getElementById("divB").style.display = "none";
                    document.getElementById("twoSame").style.backgroundColor = "buttonface";
                    hideResults();
                    break;
                case 2:
                    selectSecondVar = 2;
                    document.getElementById("twoSame").style.backgroundColor = "violet";
                    document.getElementById("divA").style.display = "block";
                    document.getElementById("divB").style.display = "block";
                    document.getElementById("divO").style.display = "unset";
                    document.getElementById("divS").style.display = "unset";
                    
                    document.getElementById("allSame").style.backgroundColor = "buttonface";
                    hideResults();
                    break;
            }
        }
        
        function hideResults(){
            document.getElementById("result").innerHTML = "";
            document.getElementById("input1").value = "";
            document.getElementById("input2").value = "";
        }
        
        function count(option){
            let a = parseInt(document.getElementById("input1").value);
            let b = parseInt(document.getElementById("input2").value);
            switch(option){
                case 1:
                    switch(selectFirstVar){
                        case 1:
                            showResult(a*4, 1);
                            break;
                        case 2:
                            showResult((a*2)+(b*2), 1);
                            break;
                        case 3:
                            switch(selectSecondVar){
                                case 1:
                                    showResult(a*3, 1);
                                    break;
                                case 2:
                                    if(a > b){
                                        showResult((2*a)+b, 1);
                                    } else {
                                        showResult((2*b)+a, 1);
                                    }
                                    break;
                            }
                            break;
                    }
                    break;
                case 2:
                    switch(selectFirstVar){
                        case 1:
                            showResult(a*a, 2);
                            break;
                        case 2:
                            showResult(a*b, 2);
                            break;
                        case 3:
                            switch(selectSecondVar){
                                case 1:
                                    showResult(((a*a)*Math.sqrt(3))/4, 2);
                                    break;
                                case 2:
                                   /*if(a > b){
                                        let alpha = Math.cos(b/(2*a));
                                        console.log(alpha);
                                        showResult(((a*a)*Math.sin(2*alpha))/2, 2);
                                    } else {
                                        let alpha = Math.cos(a/(2*b));
                                        showResult(((b*b)*Math.sin(2*alpha))/2, 2);
                                    }*/
                                    showResult("Chybí vzorec", 2);
                                    break;
                            }
                            break;
                    }
                    break;
            }
        }
        
        function showResult(result, type){
            switch(type){
                case 1:
                    document.getElementById("result").innerHTML = "Obvod je: <strong>"+result+"</strong> jednotek.";
                    break;
                case 2:
                    document.getElementById("result").innerHTML = "Obsah je: <strong>"+result+"</strong> jednotek².";
                    break;
            }
        }
    </script> 
    </body>
    
