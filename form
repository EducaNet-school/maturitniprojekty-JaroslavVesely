<script>
function verif(f)
{

var control = /[`!@#$%^&*()_+\-=\[\]{};':"\\|,.<>\/?~]/i;
if(control.test(f.name.value)){
alert("Nepovolené Znaky");
return false;
}

if(f.name.value === ''){
alert("Nevyplněné jméno");
return false;
}

if(f.name.value === ''){
alert("Nevyplněné jméno");
return false;
}

if(!f.adress.value){
alert("bydlíš pod mostem?");
return false;
}

if(!hasWhiteSpace(f.name.value)){
alert("není přijmení?");
return false;
}


return confirm("Vše v Pořádku");
} 


function hasWhiteSpace(s) {
  return s.indexOf(' ') >= 0;
}

</script>
